extends ../layouts/default.pug

block content
  .card-list._clearfix
    if links.github
      .card-item
        a.content.-github(
          title=links.github.name
          href=links.github.url
        )
          .icon
          //- .name GitHub

    if links.habrahabr
      .card-item
        a.content.-habrahabr(
          title=links.habrahabr.name

/** Imports */
// @import "node_modules/bootstrap/dist/css/bootstrap.css"
@import "node_modules/normalize.css/normalize.css"

/** Values */
$font_main              = "Roboto"

$color_white            = #ffffff
$color_light_grey       = #fafafa
$color_grey             = #f3f3f3
$color_dark_grey        = #4d4d4d
$color_black            = #1a1a1a

$color_main_bg          = $color_dark_grey
$color_main_color       = $color_white

/** Init */
if $font_main == "Roboto"
  @import url("https://fonts.googleapis.com/css?family=Roboto:400,500,100,300,700&subset=latin,greek,greek-ext,vietnamese,cyrillic-ext,latin-ext,cyrillic")

/** Abstract */
$block-shadow
  box-shadow: 0 2px 4px rgba($color_black, 0.3)

/** General */
body
  position: relative

  background-color: $color_main_bg
  background-image: urlBase64("src/images/background.png")
  
  color: $color_main_fg
  
  font-family: $font_main

a
  color: $color_link_fg
  text-decoration: none
  
  transition: color 0.1s linear

  &:hover,
  &:focus
    color: darken($color_link_fg, 10%)
    text-decoration: underline
  
  &:active
    color: darken($color_link_fg, 20%)
    text-decoration: underline

  &:focus
    outline: 5px auto -webkit-focus-ring-color
    outline-offset: -2px

/** Helpers */
._clearfix
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

/** Footer */
.footer
  > .wrapper
    margin: 6px 14px
    padding: 6px 14px
    
    text-align: center
    line-height: 2em

/** Imports */
// @import "node_modules/bootstrap/dist/css/bootstrap.css"
@import "node_modules/normalize.css/normalize.css"

/** Values */
$font_main              = "Roboto"

$color_white            = #ffffff
$color_light_grey       = #fafafa
$color_grey             = #f3f3f3
$color_dark_grey        = #4d4d4d
$color_black            = #1a1a1a

$color_main_bg          = $color_dark_grey
$color_main_color       = $color_white

/** Init */
if $font_main == "Roboto"
  @import url("https://fonts.googleapis.com/css?family=Roboto:400,500,100,300,700&subset=latin,greek,greek-ext,vietnamese,cyrillic-ext,latin-ext,cyrillic")

/** General */
body
  background: darken($color_main_bg, 5%)
  
  color: $color_main_color
  
  font-family: $font_main
